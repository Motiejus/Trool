<h1>New po</h1>

<%= form_for :po, :url => :pos do |f| %>
    <table style="margin-top: 20px">
        <tr> <td>Project:</td><td><%= collection_select :pot, :id, Pot.all, :id, :title  %></td>
        <tr> <td><%= f.label :lang %></td><td><%= f.text_field :lang %></td>
        <tr> <td><%= f.label :translator %></td><td><%= f.text_field :translator %></td>
        <tr> <td colspan="2">
                <a href="#" onclick="$('#data').toggle(); return false">Already have a .po file?</a></td>
        <tr id="data" style="display: none;">
            <td>Po file</td>
            <td><%= text_area_tag :data, nil, :rows=>20, :cols=>40 %></td>
        <tr> <td colspan="2"><input type="submit" value="Add language!" /></td>
    </table>
<% end %>

<%= link_to 'Back', pos_path %>
